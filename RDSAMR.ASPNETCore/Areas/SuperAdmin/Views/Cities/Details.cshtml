@model CityVM

<h1> City Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            City ID
        </dt>
        <dd class="col-sm-10">
            @Model.CityID
        </dd>
        <dt class="col-sm-2">
            Country Name
        </dt>
        <dd class="col-sm-10">
            @Model.CityName
        </dd>
        <dt class="col-sm-2">
            State Name
        </dt>
        <dd class="col-sm-10">
            @Model.StateName
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CityID">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
