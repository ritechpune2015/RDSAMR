@model IEnumerable<StateVM>


@if (TempData["Delete"] != null)
{
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Delete"]
    </div>
}

@if (TempData["Create"] != null)
{
    <div class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Create"]
    </div>
}

@if (TempData["Edit"] != null)
{
    <div class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @TempData["Edit"]
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#CountryTbl').DataTable({
            "destroy": true,
            "searching": true,
            "paging": true,
            "ordering": false,
            "bLengthChange": false

        });

    });
</script>

<div class="panel panel-primary">
    <div class="panel-heading bg-primary">
        <h5 class="text-center"><b>State List</b></h5>
    </div>
    <div class="card-block">
        <a asp-action="Create" class="btn btn-success">Create New</a>
        <div class="dt-responsive table-responsive">
            <table id="CountryTbl" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Sr. No.
                        </th>
                      
                        <th>
                            State Name
                        </th>
                        <th>
                            Country Name
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{int srno = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @srno
                            </td>
                            
                            <td>
                                @item.StateName
                            </td>
                            <td>
                                @item.CountryName
                            </td>
                            <td>
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.StateID">Edit</a>
                                &nbsp;
                                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.StateID">Details</a>
                                &nbsp;
                                <a asp-action="Delete" class="btn btn-warning" asp-route-id="@item.StateID" onclick="return confirm('Are you sure?')" }>Delete</a>

                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
          </div>
    </div>
</div>
